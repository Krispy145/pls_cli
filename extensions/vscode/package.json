{
  "name": "digital-oasis",
  "displayName": "Digital Oasis",
  "description": "vscode extension to streamline dev",
  "version": "0.7.1",
  "repository": "https://github.com/Krispy145/digital-oasis-cli",
  "private": true,
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:digital-oasis.new-feature",
    "onCommand:digital-oasis.add-component",
    "onCommand:digital-oasis.add-model"    
  ],
  "main": "./out/extension.js",
  "contributes": {
    "submenus": [
      {
        "label": "Digital Oasis",
        "id": "digital-oasis.submenu"
      }
    ],
    "commands": [
      {
        "command": "digital-oasis.new-feature",
        "title": "Feature",
        "shortTitle": "New Feature"
      },      
      {
        "command": "digital-oasis.add-component",
        "title": "Component",
        "shortTitle": "New Component"
      },
      {
        "command": "digital-oasis.add-model",
        "shortTitle": "New Model",
        "title": "Model"
      }      
    ],
    "menus": {
      "explorer/context": [
        {
          "group": "01_flutter",
          "submenu": "digital-oasis.submenu",
          "when": "explorerResourceIsFolder"
        },
        {
          "group": "01_flutter",
          "command": "digital-oasis.add-input",
          "when": "!explorerResourceIsFolder && resourceFilename =~ /bloc|cubit/"
        }
      ],
      "commandPalette": [
       
      ],
      "digital-oasis.submenu": [
        {
          "command": "digital-oasis.new-feature",
          "when": "explorerResourceIsFolder && resource =~ /.*?(?<!(\\\\|\\/)(blocs|components|models|pages|repositories|services))$/"
        },        
        {
          "command": "digital-oasis.add-component",
          "when": "explorerResourceIsFolder && resource =~ /.*?(?<!(\\\\|\\/)(blocs|components|models|pages|repositories|services))$/"
        },
        {
          "command": "digital-oasis.add-model",
          "when": "explorerResourceIsFolder && resource =~ /.*?(?<!(\\\\|\\/)(blocs|components|models|pages|repositories|services))$/"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "build": "vsce package -o digital-oasis.vsix",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4",
    "vsce": "^2.11.0"
  },
  "dependencies": {
    "change-case": "^5.0.2",
    "lodash": "^4.17.21"
  }
}
